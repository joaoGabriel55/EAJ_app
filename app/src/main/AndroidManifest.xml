<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quaresma.conhecendoeaj">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".adapter.FixedTabsPageAdapter" />
        <activity android:name=".fragment.Fragment1" />
        <activity android:name=".fragment.Fragment2" />
        <activity android:name=".adapter.LocalAdapter" />
        <activity android:name=".MyRecycler" />
        <activity android:name=".fragment.Fragment3"></activity>
    </application>

    <!--Serve para redenrizar-->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

</manifest>